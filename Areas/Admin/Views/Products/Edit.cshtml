@model Product
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-6">

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Edit Product</h5>

            <!-- General Form Elements -->
            <form asp-action="Edit" enctype="multipart/form-data" method="post">
                <input hidden asp-for="Image" />
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Product Name</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="Name"
                               class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Category Name</label>
                    <div class="col-sm-10">
                        <select class="form-select" asp-for="CategoryId" aria-label="Default select example"
                                asp-items="ViewBag.CategoryId">
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Description</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="Descrrption"
                               class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputNumber" class="col-sm-2 col-form-label">Price</label>
                    <div class="col-sm-10">
                        <input type="number" asp-for="Price"
                               class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputNumber" class="col-sm-2 col-form-label">Choose Image</label>
                    <div class="col-sm-10">
                        <input type="file" name="File" asp-for="File"
                               class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Submit</label>
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Edit</button>
                    </div>
                </div>

            </form><!-- End General Form Elements -->

        </div>
    </div>
</div>

