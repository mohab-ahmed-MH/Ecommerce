@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

 <div class="col-12">
              <div class="card top-selling overflow-auto">

                <div class="filter">
                  <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                  <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                    <li class="dropdown-header text-start">
                      <h6>Filter</h6>
                    </li>

                    <li><a class="dropdown-item" href="#">Today</a></li>
                    <li><a class="dropdown-item" href="#">This Month</a></li>
                    <li><a class="dropdown-item" href="#">This Year</a></li>
                  </ul>
                </div>

                <div class="card-body pb-0">
                  <h5 class="card-title">Top Selling <span>| Today</span></h5>
                  <a  asp-action="Create" asp-controller="Products" asp-area="Admin"
                       class="btn btn-outline-success">Add Product</a>
                  <table class="table table-borderless">
                    <thead>
                      <tr>
                          <th scope="col">Name</th>
                          <th scope="col">Category Name</th>
                          <th scope="col">Descrption</th>
                          <th scope="col">Price</th>
                          <th scope="col">Preview</th>
                          <th scope="col">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                       @foreach (var item in Model)
                       {
                            <tr>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Category.Name
                                </td>
                                <td>
                                    @item.Descrrption
                                </td>
                                <td>
                                    @item.Price
                                </td>
                                <td>
                                    <img src="~/product/@item.Image" style="width:100px; hight:100px;"/>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-controller="Products" asp-area="Admin" asp-route-id="@item.Id" 
                                       class="btn btn-outline-primary">
                                       Edit
                                    </a>
                                    <a asp-action="Delete" asp-controller="Products" asp-area="Admin" asp-route-id="@item.Id"
                                       class="btn btn-outline-danger">
                                       Delete
                                    </a>
                                </td>
                           </tr>
                       }
                    </tbody>
                  </table>

                </div>

              </div>
            </div><!-- End Top Selling -->

